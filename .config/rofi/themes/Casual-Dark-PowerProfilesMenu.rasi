@import "~/.config/rofi/themes/Casual-Dark.rasi"

configuration {
	show-icons: false;	
}

window {
    background-color: @background;
    border:           0;
    padding:          10;
    transparency:     "real";
    width:            150px;
    location:         northeast;
}

listview {
    lines:     3;
    columns:   1;
}

/*removes the text input line*/
mainbox {
  children: [listview];
}
